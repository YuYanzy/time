{
    "manifest_version": 2,

    "name": "时间",
    "description": "时间都去哪儿了。",
    "version": "1.17.9.9",

    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },

    "options_ui": {
    	"chrome_style": true,
        "page": "options.html",
        "open_in_tab": true
    },

    "browser_action": {
        "default_icon": {
            "16": "images/icon16.png",
            "24": "images/icon24.png",
            "32": "images/icon32.png"
        },
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["event.js"]
    },

    "permissions": [
        "tabs",
        "alarms",
        "unlimitedStorage"
    ]
}
